<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="edu.asu.facultyscheduleoptimizer.AddActivity">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/TitleText"
            android:layout_alignParentEnd="true"
            android:hint="Enter title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_below="@+id/TitleText"
            android:layout_alignParentStart="true"
            android:id="@+id/DescriptionText"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:hint="Description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

        <Switch
            android:text="All-day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SwitchDay"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/DescriptionText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

        <TableLayout
            android:id="@+id/TimeTable"
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SwitchDay"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_alignParentLeft="true">
            <TableRow>
                <TextView
                    android:gravity="center_vertical"
                    android:text="Start"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/StartDate"
                    android:gravity="center"
                    android:hint="Date"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:onClick="SelectStartDate"/>

                <TextView
                    android:id="@+id/StartTime"
                    android:gravity="center"
                    android:hint="Time"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:onClick="SelectStartTime"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:gravity="center_vertical"
                    android:text="End"
                    android:layout_height="50dp"/>
                <TextView
                    android:gravity="center"
                    android:hint="Date"
                    android:layout_height="50dp"
                    android:id="@+id/EndDate"
                    android:clickable="true"
                    android:onClick="SelectEndDate"/>

                <TextView
                    android:id="@+id/EndTime"
                    android:gravity="center"
                    android:hint="Time"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:onClick="SelectEndTime"/>
            </TableRow>
        </TableLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/TimeTable"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:id="@+id/PlaceText"
            android:layout_alignParentEnd="true"
            android:hint="Enter place"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

        <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/AddButton"
            android:layout_below="@+id/PlaceText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:onClick="AddEvent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radioButton"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/PlaceText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp">
        <RadioButton
            android:text="Research"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
             />

        <RadioButton
            android:text="Teaching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/radioButton2" />

        <RadioButton
            android:text="Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/radioButton3" />
        </RadioGroup>

    </RelativeLayout>
</ScrollView>